<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/platinumMist"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        style="@style/h4"
        android:id="@+id/sign"
        android:textSize="35sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/EmailLogin"
        style="@style/editText"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/rusticBlaze"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/cornflowerBlue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sign" />

    <EditText
        android:id="@+id/password"
        style="@style/editText"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/rusticBlaze"
        android:hint="password"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/cornflowerBlue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/EmailLogin" />
    <EditText
        android:id="@+id/cpassword"
        style="@style/editText"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/rusticBlaze"
        android:hint="Confirm Password"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/cornflowerBlue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/password" />
    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="0dp"
        android:layout_height="40dp"
        style="@style/blueButtonStyle"
        app:layout_constraintTop_toBottomOf="@id/cpassword"
        app:layout_constraintStart_toStartOf="@id/cpassword"
        app:layout_constraintEnd_toEndOf="@id/cpassword"
        android:layout_marginTop="25dp"
        android:text="Sign Up"
        android:textColorHint="@color/rusticBlaze"
        android:textSize="25sp"
        android:textColor="@color/g_blue"
        app:spinning_bar_color="@color/white"
        >

    </Button>
    <TextView
        android:id="@+id/tvForgotPasswordLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/h2"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="@id/buttonLogin"
        app:layout_constraintTop_toBottomOf="@id/buttonLogin"
        android:textAlignment="center"
        android:gravity="center"
        android:text="Forgot password?"
        android:textColor="@color/black"
        />

    <ImageView
        android:id="@+id/facebookLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        app:layout_constraintStart_toStartOf="@id/tvForgotPasswordLogin"
        app:layout_constraintTop_toBottomOf="@id/tvForgotPasswordLogin"
        android:src="@drawable/facebook_login"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Facebook"
        app:layout_constraintStart_toStartOf="@id/facebookLogin"
        app:layout_constraintTop_toTopOf="@id/facebookLogin"
        app:layout_constraintBottom_toBottomOf="@id/facebookLogin"
        app:layout_constraintEnd_toEndOf="@id/facebookLogin"/>

    <ImageView
        android:id="@+id/googleLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="53dp"
        app:layout_constraintEnd_toEndOf="@id/buttonLogin"
        app:layout_constraintTop_toBottomOf="@id/buttonLogin"
        android:src="@drawable/google_login"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Google"
        app:layout_constraintStart_toStartOf="@id/googleLogin"
        app:layout_constraintTop_toTopOf="@id/googleLogin"
        app:layout_constraintBottom_toBottomOf="@id/googleLogin"
        app:layout_constraintEnd_toEndOf="@id/googleLogin"/>


</androidx.constraintlayout.widget.ConstraintLayout>
